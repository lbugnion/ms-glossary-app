<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Azure Words Of The Day - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("headscripts", required: false)
</head>

<body>

    <div id="topics">
        @RenderSection("topics", true);
    </div>

    <div id="main">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Azure Words Of The Day - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

</body>
</html>
