<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["SiteTitle"] - @ViewData["PageTitle"]</title>

    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("headscripts", required: false)
</head>

<body>

    <div id="topics-bar">

        <div class="center">
            <a href="/@ViewData["LanguageCode"]">
                <img src="~/img/Azure_216_blue.png"
                     id="azure-logo" />
            </a>

            <div id="title">
                <span id="title1">Microsoft Azure</span><br /><span id="title2">@ViewData["WordsOfTheDay"]</span>
            </div>

            @RenderSection("Languages", true)
        </div>

        @RenderSection("Topics", true)
    </div>

    <div id="main">
        @RenderBody()
    </div>

</body>
</html>
