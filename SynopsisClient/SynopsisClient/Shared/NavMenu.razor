@inject SynopsisClient.Model.SynopsisHandler Handler;
@inject NavigationManager Nav;

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Synopsis Editor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateHome" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateTitle">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Title
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateDescription">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Description
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateAuthors">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Authors
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigatePhonetics">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Phonetics
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigatePersonalNotes">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Notes
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateKeywords">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Keywords
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateDemos">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Demos
            </NavLink>
        </li>
    </ul>

    @if (_showNavWarning)
    {
        <div style="font-weight: bold; color: white; margin: 10px;">
            You cannot navigate now, please save or fix the Synopsis first.
        </div>
    }

</div>
