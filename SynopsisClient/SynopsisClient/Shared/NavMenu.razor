@inject SynopsisClient.Model.SynopsisHandler Handler;
@inject NavigationManager Nav;

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Synopsis Editor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateHome" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigateAuthors">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Authors
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="NavigatePersonalNotes">
                <span class="oi oi-arrow-right" aria-hidden="true"></span> Personal notes
            </NavLink>
        </li>
    </ul>
</div>
